<h1>Editing Events</h1>
<%= form_with(model: @event, local: true) do |f| %>
 
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@event.errors.count, "error") %> prohibited
        this event from being saved:
      </h2>
      <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <div>   
    <%= f.hidden_field :user_id, value: "#{@users}" %>   
  </div>   

  <div>   
    <label>Select User</label>   
    <%=f.collection_select :user_id, User.all, :id,:name%>
  </div> 

  <div>   
   <label>place</label>   
    <%=f.collection_select :place, Country.all, :ioc,:name%>
  </div> 

  <div>
    <label>Select Date/Time</label>  
    <%= f.datetime_select :date, placeholder: 'mm/dd/yyyy', :id => "datepicker"%>
   </div>

   <%= link_to 'Back', { controller: 'events', action: 'index'} %>   
   <%= f.submit 'Update events' %> 
   <%= link_to 'create invitations', { controller: 'invitations', action: 'index'} %>
<% end %>


